<Window x:Class="AutoAddin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto Add-in"
        Width="520"
        Height="340"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Automatisch gegenereerde Revit add-in"
                   FontSize="20" FontWeight="SemiBold"/>

        <Border Grid.Row="1" Margin="0,12,0,12" Padding="12" BorderThickness="1" BorderBrush="#D7E0DA" CornerRadius="10">
            <TextBlock x:Name="TxtSummary" TextWrapping="Wrap"/>
        </Border>

        <Button Grid.Row="2" Content="Sluiten" Width="120" Height="32" HorizontalAlignment="Right" Click="Close_Click"/>
    </Grid>
</Window>
