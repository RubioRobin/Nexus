<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Core colors (Nexus / VH direction) -->
  <Color x:Key="Color.Brand.Primary">#2F7D57</Color>
  <Color x:Key="Color.Brand.PrimaryHover">#286B4A</Color>
  <Color x:Key="Color.Brand.PrimaryPressed">#1F563B</Color>
  <Color x:Key="Color.Brand.Secondary">#E8F2EC</Color>

  <Color x:Key="Color.Surface.Background">#F6F8F7</Color>
  <Color x:Key="Color.Surface.Card">#FFFFFF</Color>
  <Color x:Key="Color.Border.Subtle">#D7E0DA</Color>

  <Color x:Key="Color.Text.Primary">#1E2521</Color>
  <Color x:Key="Color.Text.Muted">#5F6E66</Color>
  <Color x:Key="Color.Text.OnPrimary">#FFFFFF</Color>

  <Color x:Key="Color.Status.Success">#2F7D57</Color>
  <Color x:Key="Color.Status.Warning">#B57A18</Color>
  <Color x:Key="Color.Status.Error">#B23A3A</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="Brush.Brand.Primary" Color="{StaticResource Color.Brand.Primary}"/>
  <SolidColorBrush x:Key="Brush.Brand.PrimaryHover" Color="{StaticResource Color.Brand.PrimaryHover}"/>
  <SolidColorBrush x:Key="Brush.Brand.PrimaryPressed" Color="{StaticResource Color.Brand.PrimaryPressed}"/>
  <SolidColorBrush x:Key="Brush.Brand.Secondary" Color="{StaticResource Color.Brand.Secondary}"/>

  <SolidColorBrush x:Key="Brush.Surface.Background" Color="{StaticResource Color.Surface.Background}"/>
  <SolidColorBrush x:Key="Brush.Surface.Card" Color="{StaticResource Color.Surface.Card}"/>
  <SolidColorBrush x:Key="Brush.Border.Subtle" Color="{StaticResource Color.Border.Subtle}"/>

  <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource Color.Text.Primary}"/>
  <SolidColorBrush x:Key="Brush.Text.Muted" Color="{StaticResource Color.Text.Muted}"/>
  <SolidColorBrush x:Key="Brush.Text.OnPrimary" Color="{StaticResource Color.Text.OnPrimary}"/>

  <SolidColorBrush x:Key="Brush.Status.Success" Color="{StaticResource Color.Status.Success}"/>
  <SolidColorBrush x:Key="Brush.Status.Warning" Color="{StaticResource Color.Status.Warning}"/>
  <SolidColorBrush x:Key="Brush.Status.Error" Color="{StaticResource Color.Status.Error}"/>

  <!-- Radius/spacing tokens -->
  <CornerRadius x:Key="Radius.Small">6</CornerRadius>
  <CornerRadius x:Key="Radius.Medium">10</CornerRadius>
  <CornerRadius x:Key="Radius.Large">14</CornerRadius>

  <x:Double x:Key="Space.1">4</x:Double>
  <x:Double x:Key="Space.2">8</x:Double>
  <x:Double x:Key="Space.3">12</x:Double>
  <x:Double x:Key="Space.4">16</x:Double>
  <x:Double x:Key="Space.5">24</x:Double>

</ResourceDictionary>
